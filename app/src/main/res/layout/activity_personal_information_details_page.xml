<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonalInformationDetailsPageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/people_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/back"
        android:isScrollContainer="true"
        app:titleTextColor="#ff0000"
        app:titleMarginStart="100dp">
        <ImageView
            android:id="@+id/my"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dot"
            android:layout_gravity="center|right"
            android:paddingRight="10dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <top.weiyuexin.tetl.CircleImageView
            android:id="@+id/people_logo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/head_img"/>
        <LinearLayout
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/peopleName"
                    android:text="hhh"
                    android:textSize="28sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/sexPic"
                    android:paddingLeft="5dp"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/male"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="昵称 : "
                    android:textSize="18sp"
                    android:textColor="#AA8F8F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/people_userName"
                    android:text="hhh"
                    android:textSize="18sp"
                    android:textColor="#AA8F8F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="#EEEEEE"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/college"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:paddingLeft="10dp"
                android:text="所在学院"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/peopleCollege"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:text="hhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/major"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:paddingLeft="10dp"
                android:text="专       业"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/peopleMajor"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:text="hhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/registertime"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:paddingLeft="10dp"
                android:text="注册时间"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/peopleTime"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:text="2hhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/phonenumber"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:paddingLeft="10dp"
                android:text="联系方式"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/peoplePhone"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:text="hhhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>

    </LinearLayout>

</LinearLayout>